<Window x:Class="CarParkSystem.WPF.UpdateSubdivisionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Автопарк - Редактирование подразделения" Height="600" Width="600" WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"  Background="#2C3E50"
        Icon="C:\Users\akuli\Downloads\pngwing.com (1).png">
    <Viewbox Stretch="Uniform">
        <Grid Width="600" Height="600" >
            <Border Background="White" Padding="20" CornerRadius="10" Margin="30">
                <StackPanel>
                    <TextBlock Text="Редактировать подразделение" FontSize="22" FontWeight="Bold" Margin="0,50,0,50" HorizontalAlignment="Center"  Foreground="#2C3E50" />

                    <Label Content="Название"    Foreground="#2C3E50" />
                    <TextBox x:Name="NameBox" Margin="0,0,0,10" Background="#ECF0F1" Foreground="Black" ToolTip="Название подразделения" />

                    <Label Content="Адрес"   Foreground="#2C3E50" />
                    <TextBox x:Name="AddressBox" Margin="0,0,0,10" Background="#ECF0F1" Foreground="Black" ToolTip="Адрес" />

                    <Label Content="Телефон"   Foreground="#2C3E50" />
                    <TextBox x:Name="PhoneNumberBox" Margin="0,0,0,10" Background="#ECF0F1" Foreground="Black" ToolTip="Номер телефона" />

                    <Label Content="Статус"   Foreground="#2C3E50" />
                    <ComboBox x:Name="SubdivisionStatusBox" Padding="10" Margin="0,0,0,10" Background="#282A36" Foreground="Black"  ToolTip="Статус подразделения" />


                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="Сохранить" Width="100" Margin="10,0" Background="#27AE60" Foreground="White" Click="SaveButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="10" BorderThickness="0">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button Content="Удалить" Width="100" Margin="10,0" Background="#C0392B" Foreground="White" Click="DeleteButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="10" BorderThickness="0">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Viewbox>
</Window>