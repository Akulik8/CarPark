<Window x:Class="CarParkSystem.WPF.SubdivisionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Автопарк - Подразделения" Height="630" Width="1120"
        WindowStartupLocation="CenterScreen"
        Background="#2C3E50"
        ResizeMode="CanResize"
        Icon="C:\Users\akuli\Downloads\pngwing.com (1).png" Loaded="Window_Loaded">

    <!-- Viewbox для масштабируемой разметки -->
    <Viewbox Stretch="Uniform">
        <Grid Width="1120" Height="630" >

            <Border Background="White" 
           CornerRadius="15" 
           Padding="0" 
           Width="auto" 
           Height="auto"
           VerticalAlignment="Center"
           HorizontalAlignment="Center">

                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="13" Opacity="0.4"/>
                </Border.Effect>


                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="9*"/>
                        <ColumnDefinition Width="31*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="510"/>
                    </Grid.RowDefinitions>

                    <StackPanel Margin="0,0,0, 0">
                        <TextBlock Text="Поиск по названию" FontWeight="Bold" Margin="0,100,0,10"/>
                        <TextBox x:Name="SearchName" Background="#ECF0F1" Foreground="Black" FontSize="14" Padding="5" Margin="0,0,5,10" ToolTip="Поиск по названию" TextChanged="SearchName_TextChanged"/>

                        <TextBlock Text="Поиск по адресу" FontWeight="Bold" Margin="0,10,0,10"/>
                        <TextBox x:Name="SearchAddress" Background="#ECF0F1" Foreground="Black" FontSize="14" Padding="5" Margin="0,0,5,10" ToolTip="Поиск по адресу" TextChanged="SearchAddress_TextChanged"/>

                        <TextBlock Text="Поиск по телефону" FontWeight="Bold" Margin="0,10,0,10"/>
                        <TextBox x:Name="SearchPhone" Background="#ECF0F1" Foreground="Black" FontSize="14" Padding="5" Margin="0,0,5,10" ToolTip="Поиск по номеру телефона" TextChanged="SearchPhone_TextChanged"/>

                        <TextBlock Text="Статус подразделения" FontWeight="Bold" Margin="0,10,0,10"/>
                        <ComboBox x:Name="FilterStatusComboBox" Width="Auto" Margin="0,0,5,10" SelectionChanged="FilterComboBox_SelectionChanged" Background="#ECF0F1">
                            <ComboBoxItem Content="Действующее"/>
                            <!--IsSelected="True"-->
                            <ComboBoxItem Content="Упразднено"/>
                            <ComboBoxItem Content="Все"/>
                        </ComboBox>



                        <Button x:Name="AddRequestButton" Content="Добавить" Width="Auto" Margin="0,90,5,0" Background="#27AE60" Foreground="White" FontWeight="Bold" Click="AddRequest_Click" Height="34" Visibility="Visible">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

                    <!-- Таблица заявок -->
                    <DataGrid x:Name="RequestGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                        HeadersVisibility="Column" Background="White" BorderBrush="#D0D0D0" 
                        RowHeaderWidth="0" GridLinesVisibility="All"
                        ColumnHeaderHeight="40" RowHeight="40" SelectionMode="Single" Grid.Column="1" Margin="1,0,1,0" MouseDoubleClick="RequestGrid_MouseDoubleClick">
                        <!-- Используем Width="*" для автоматического выравнивания по содержимому -->
                        <DataGrid.Columns>
                            <!--<DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="auto"/>-->
                            <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Адрес" Binding="{Binding Address}" Width="*"/>
                            <DataGridTextColumn Header="Номер телефона" Binding="{Binding PhoneNumber}" Width="*"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="*"/>

                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Viewbox>
</Window>