<Window x:Class="CarParkSystem.WPF.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Автопарк - Заявки Менеджера"
        Height="800" Width="1200" MinWidth="1000" MinHeight="700"
        Background="#F5F5F5"
        MouseDown="Window_MouseDown"
        PreviewKeyDown="Window_PreviewKeyDown"
        WindowStartupLocation="CenterScreen"
        Icon="C:\Users\akuli\Downloads\pngwing.com (1).png" Loaded="Window_Loaded">

    <Grid>
        <!-- Основной контент -->
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="9*"/>
                <ColumnDefinition Width="31*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Верхняя панель: логотип + имя пользователя + кнопка -->
            <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,10" Grid.ColumnSpan="2">
                <!-- Логотип -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <Image Source="C:\Users\akuli\Downloads\pngwing.com (1).png" Height="30" Margin="0,0,10,0"/>
                    <TextBlock Text="Автопарк" FontSize="22" FontWeight="Bold" Foreground="#34495E" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Кнопка добавления заявки -->
                <Button Content="Добавить заявку" Width="150" FontSize="15" Background="#27AE60" Foreground="White" FontWeight="Bold"
                        Click="OpenAddDialog_Click" DockPanel.Dock="Right" Margin="10,0,0,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </DockPanel>

            <!-- Левая панель с фильтрами и таблица и профиль пользователя -->
            <Grid Grid.Row="1" Margin="0,10,0,0" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Панель фильтров -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Кнопка профиля -->
                    <Grid Grid.Row="0">
                        <Button x:Name="UserProfileButton" Click="ProfileButton_Click" Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Left" VerticalAlignment="Center" Width="280" Margin="-20,0,0,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <Ellipse Width="30" Height="30" Margin="0,0,10,0">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="C:\Users\akuli\Downloads\pngwing.com.png"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                                <TextBlock x:Name="UserName" Text="Фамилия Имя" FontWeight="Bold" Foreground="#34495E" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <!-- Всплывающее меню профиля -->
                        <Popup x:Name="UserPopup" PlacementTarget="{Binding ElementName=UserProfileButton}" Placement="Bottom" StaysOpen="False">
                            <Border Background="#F5F5F5" BorderBrush="#CCC" BorderThickness="0" CornerRadius="0" Padding="10" Width="280">
                                <StackPanel>
                                    <Button Content="Сменить пароль" FontSize="14" Margin="0,5,0,10" Background="#2980B9" Foreground="White" Click="ChangePassword_Click">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <Button Content="Выйти" FontSize="14" Margin="0,5,0,5" Background="#C0392B" Foreground="White" Click="Logout_Click">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>
                            </Border>
                        </Popup>
                    </Grid>

                    <!-- Фильтры поиска -->
                    <StackPanel Grid.Row="1" Margin="0,10,0,0">
                        <TextBlock Text="Поиск по грузу" FontWeight="Bold" Margin="0,50,0,5"/>
                        <TextBox x:Name="SearchCargo" Background="White" Foreground="Black" FontSize="14" Padding="5" Margin="0,0,5,10" ToolTip="Поиск по грузу" TextChanged="SearchBox_TextChanged"/>

                        <TextBlock Text="Откуда" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="SearchFrom" Background="White" Foreground="Black" FontSize="14" Padding="5" Margin="0,0,5,10" ToolTip="Поиск по пункту отправления" TextChanged="SearchFrom_TextChanged"/>

                        <TextBlock Text="Куда" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="SearchTo" Background="White" Foreground="Black" FontSize="14" Padding="5" Margin="0,0,5,10" ToolTip="Поиск по пункту прибытия" TextChanged="SearchTo_TextChanged"/>

                        <TextBlock Text="Период отображения заказов" FontWeight="Bold" Margin="0,5,0,5"/>
                        <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal">
                                <DatePicker x:Name="StartDatePicker" Width="120" Margin="0,0,5,0" SelectedDateChanged="StartDatePicker_SelectedDateChanged" ToolTip="Поиск с какой даты отображать" />
                                <DatePicker x:Name="EndDatePicker" Width="120" SelectedDateChanged="EndDatePicker_SelectedDateChanged" ToolTip="Поиск по какую дату отображать" />
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Text="Статус заявки" FontWeight="Bold" Margin="0,0,0,10"/>
                        <ComboBox x:Name="FilterPeriodComboBox" Width="Auto" Margin="0,0,5,30" SelectionChanged="FilterComboBox_SelectionChanged" ToolTip="Поиск по статусу заявки" >
                            <ComboBoxItem Content="На рассмотрении"/>
                            <!--IsSelected="True"-->
                            <ComboBoxItem Content="В работе"/>
                            <ComboBoxItem Content="Выполнена"/>
                            <ComboBoxItem Content="Все"/>
                        </ComboBox>

                        <!-- Кнопка поиска -->
                        <Button Content="Найти" Width="Auto" Margin="0,10,5,50" Background="#2980B9" Foreground="White" FontWeight="Bold" Click="SearchRequest_Click" Visibility="Hidden">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button Content="Справочник подразделений" Margin="0,0,5,0" Background="Silver" Foreground="White" FontWeight="Bold" Click="OpenSubdivision_Click" Width="Auto">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Таблица заявок -->
                <DataGrid x:Name="RequestGrid" Grid.Column="1" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                          HeadersVisibility="Column" Background="White" BorderBrush="#D0D0D0" 
                          RowHeaderWidth="0" GridLinesVisibility="All" 
                          ColumnHeaderHeight="40" RowHeight="40" SelectionMode="Single"
                          MouseDoubleClick="RequestGrid_MouseDoubleClick">
                    <!-- Используем Width="*" для автоматического выравнивания по содержимому -->
                    <DataGrid.Columns>
                        <!--<DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="auto"/>-->
                        <DataGridTextColumn Header="Дата заказа" Binding="{Binding DeliveryDate, StringFormat='dd.MM.yyyy HH:mm'}" Width="*"/>
                        <DataGridTextColumn Header="Дата исполнения" Binding="{Binding DoDate, StringFormat='dd.MM.yyyy'}" Width="*"/>
                        <DataGridTextColumn Header="Груз" Binding="{Binding Cargo}" Width="*"/>
                        <DataGridTextColumn Header="Вес (кг)" Binding="{Binding Weight}" Width="*"/>
                        <DataGridTextColumn Header="Объем (м³)" Binding="{Binding Volume}" Width="*"/>
                        <DataGridTextColumn Header="Откуда" Binding="{Binding From}" Width="*"/>
                        <DataGridTextColumn Header="Куда" Binding="{Binding To}" Width="*"/>
                        <DataGridTextColumn Header="Примечание" Binding="{Binding Note}" Width="*"/>
                        <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="*"/>
                        <DataGridTextColumn Header="Подразделение" Binding="{Binding SubdivisionName}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</Window>