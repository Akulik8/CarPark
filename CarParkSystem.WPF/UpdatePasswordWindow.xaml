<Window x:Class="CarParkSystem.WPF.UpdatePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Автопарк - Смена пароля" Height="550" Width="600" WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize" Background="#2C3E50"
        Icon="C:\Users\akuli\Downloads\pngwing.com (1).png">
    <!-- Viewbox для масштабируемой разметки -->
    <Viewbox Stretch="Uniform">
        <Grid Width="600" Height="550">
            <Border Background="White" Padding="20" CornerRadius="10" Margin="30">
                <StackPanel>
                    <TextBlock Text="Смена пароля" FontSize="22" FontWeight="Bold" Margin="0,50,0,80" HorizontalAlignment="Center"  Foreground="#2C3E50" />

                    <Label Content="Введите новый пароль"   Foreground="#2C3E50" />
                    <PasswordBox x:Name="newPassword1" Margin="0,0,0,10" Background="#ECF0F1" Foreground="Black"/>

                    <Label Content="Повторите новый пароль"   Foreground="#2C3E50" />
                    <PasswordBox x:Name="newPassword2" Margin="0,0,0,50" Background="#ECF0F1" Foreground="Black"/>



                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="Изменить" Width="120" Margin="10,0" Background="#27AE60" Foreground="White" Click="UpdateButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="10" BorderThickness="0">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button Content="Отмена" Width="120" Margin="10,0" Background="#7F8C8D" Foreground="White" Click="CancelButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="10" BorderThickness="0">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Viewbox>
</Window>
